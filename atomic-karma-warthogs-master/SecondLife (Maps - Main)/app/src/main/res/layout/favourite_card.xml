<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="8dp"
        cardcornerradius="4dp"
        android:id="@+id/cv_favourite">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:id="@+id/favourites_photo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                />

            <TextView
                android:id="@+id/favourites_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/favourites_photo"
                android:textColor="@color/colorPrimaryDark"
                android:paddingVertical="16dp"
                android:paddingHorizontal="16dp"
                android:textSize="20sp"
                />

            <TextView
                android:id="@+id/favourites_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/favourites_photo"
                android:paddingVertical="8dp"
                android:paddingHorizontal="16dp"
                android:layout_below="@+id/favourites_name"
                />

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>
